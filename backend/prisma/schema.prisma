generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

model Quiz {
  id        String   @id @default(uuid())
  title     String
  createdAt DateTime @default(now())

  questions Question[]
}

model Question {
  id             String       @id @default(uuid())
  quizId         String
  type           QuestionType
  title          String
  options        Json?
  correctAnswers Json?

  quiz Quiz @relation(fields: [quizId], references: [id], onDelete: Cascade)
}

enum QuestionType {
  BOOLEAN
  INPUT
  CHECKBOX
}
